<%= render partial: '/navigation' %>

<div class="body">
  <div class="container">

    <p id="notice"></p>


    <div class="row">
      <div class="col-md-6 col-md-offset-3">

        <h1>Editing Book</h1>

        <% if @book.errors.any? %>
          <div id="error_explanation">
            <h3><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h3>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>

        <% end %>

        <%= form_with url: book_cover_search_path do |f| %>
          <div class="field row">
            <%= f.label :cover_search , "Cover Search"%><br />
            <%= f.text_field :cover_search, :placeholder => "ISBN13", class:"col-xs-12 clear" %>
          </div>

          <div class="actions row">
            <%= f.submit "Search Cover" ,class:'btn btn-primary col-xs-12'%>
          </div>
        <% end %>

        <div class="preview"></div>

        <%= form_for(@book) do |f| %>

          <div class="field row image_upload">
            <div class="upload_view"></div>
            <%= f.label :profile_image, "Image" %>
            <%= f.attachment_field :profile_image %>
          </div>

          <div class="field row">
            <%= f.label :title %>
            <%= f.text_field :title, class:'col-xs-12' %>
          </div>

          <div class="field row">
            <%= f.label :body ,'Opinion'%>
            <%= f.text_area :body, class:'col-xs-12' %>
          </div>

          <div class="actions row">
            <%= f.submit 'Update Book' ,class:'btn btn-primary col-xs-12'%>
          </div>

        <% end %>

        <%= link_to "Show", book_path(params[:id]) %> |
        <a class="back" href="/books">Back</a>

      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
</div>

<%= render partial: '/footer' %>