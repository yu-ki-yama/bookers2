<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class="nav navbar-nav navbar-left">
      <span>Bookers</span>
    </nav>

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
            <%= form_with scope: :search, url: searchs_path, method: :get, local: true, class: :search_box do |f| %>
              <%= f.text_field :word %>
              <%= f.select :search_target ,{ユーザーの検索:'ユーザの検索',投稿の検索:'投稿の検索'} %>
              <%= f.select :search_method ,{前方一致検索:'前方一致検索', 後方一致検索:'後方一致検索',完全一致検索:'完全一致検索',部分一致検索:'部分一致検索'} %>
              <%= f.submit 'Search',class: :search_submit %>
            <% end %>
          </li>
        <% end %>
        <% if user_signed_in? %>
          <li><%= link_to " Home", user_path(current_user.id), class: "glyphicon glyphicon-home home" %></li>
          <li><%= link_to " Users", users_path, class: "glyphicon glyphicon-user users" %></li>
          <li><%= link_to " Books", books_path, class: "glyphicon glyphicon-book books" %></li>
          <li><%= link_to " logout", destroy_user_session_path, class: "glyphicon glyphicon-log-out logout",method: :delete %></li>
        <% else %>
          <li><%= link_to " Home", root_path, class: "glyphicon glyphicon-home home" %></li>
          <li><%= link_to " About", about_path, class: "glyphicon glyphicon-link about" %></li>
          <li><%= link_to " sign up", new_registration_path(:user), class: "glyphicon glyphicon-edit sign_up" %></li>
          <li><%= link_to " login", new_session_path(:user), class: "glyphicon glyphicon-log-in sign_in" %></li>
        <% end %>

      </ul>
    </nav>
  </div>
</header>